import java.util.*;
class compress 
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
String str;
str=sc.next();
int n = str.length();
int i,count=1;
for(i=0;i<n-1;i++)
{
if(str.charAt(i) == str.charAt(i + 1))
{
count++;
}
System.out.print(str.charAt(i));
System.out.print(count);           
}      
}
}
